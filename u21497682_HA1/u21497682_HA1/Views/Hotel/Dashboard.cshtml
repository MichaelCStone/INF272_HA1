@{
    ViewBag.Title = "Dashboard";
}

<style>
    h2, h3 {
        color: #007bff;
        margin-bottom: 20px;
    }

    .card {
        margin: 10px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        background-color: #f8f9fa;
    }

        .card h6 {
            color: #6c757d;
        }

        .card h4 {
            color: #343a40;
            margin-top: 10px;
        }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #dee2e6;
            padding: 15px;
            text-align: left;
        }

        .table th {
            background-color: #f8f9fa;
            color: #495057;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table img.img-thumbnail {
            max-width: 50px; /* Set maximum width for logos */
            height: auto;
        }

    button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background-color: #0056b3;
        }
</style>

